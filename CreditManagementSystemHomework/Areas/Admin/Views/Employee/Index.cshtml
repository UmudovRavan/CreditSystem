@model IEnumerable<CreditManagementSystemHomework.Models.EmployeeVM>

@{
    ViewData["Title"] = "Employees";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Employees</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Employee</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().Position)</th>
            <th>@Html.DisplayNameFor(model => model.First().HireDate)</th>
            <th>@Html.DisplayNameFor(model => model.First().BranchId)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.FullName</td>
                <td>@emp.Email</td>
                <td>@emp.Position</td>
                <td>@emp.HireDate.ToShortDateString()</td>
                <td>
                    @{
                        @emp.BranchId
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
