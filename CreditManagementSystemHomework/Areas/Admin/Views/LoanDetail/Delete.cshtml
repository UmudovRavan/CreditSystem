@model CreditManagementSystemHomework.Models.LoanDetail.LoanDetailVM

@{
    ViewData["Title"] = "Delete Loan Detail";
}

<h2>Delete Loan Detail</h2>

<div>
    <h4>Are you sure you want to delete this loan detail?</h4>
    <dl class="row">
        <dt class="col-sm-3">Loan ID</dt>
        <dd class="col-sm-9">@Model.LoanId</dd>

        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

        <dt class="col-sm-3">Remaining Debt</dt>
        <dd class="col-sm-9">@Model.RemainingDebt.ToString("C")</dd>

        <dt class="col-sm-3">Start Date</dt>
        <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-3">End Date</dt>
        <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="LoanId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
