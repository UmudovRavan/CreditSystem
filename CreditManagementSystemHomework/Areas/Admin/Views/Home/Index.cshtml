@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4 text-center">Welcome to Admin Dashboard</h1>
<p class="text-muted text-center">Choose an action below to manage system entities:</p>

<div class="row row-cols-1 row-cols-md-3 g-4">

    <!-- Merchant -->
    <div class="col">
        <div class="card border-primary shadow-sm h-100">
            <div class="card-header bg-primary text-white d-flex align-items-center">
                <i class="bi bi-shop-window me-2"></i> Merchant
            </div>
            <div class="card-body">
                <p>Manage your merchants (view / add).</p>
                <a asp-area="Admin" asp-controller="Merchant" asp-action="Index" class="btn btn-outline-primary w-100 mb-2">
                    <i class="bi bi-eye-fill me-1"></i> View Merchants
                </a>
                <a asp-area="Admin" asp-controller="Merchant" asp-action="Create" class="btn btn-primary w-100">
                    <i class="bi bi-plus-lg me-1"></i> Add Merchant
                </a>
            </div>
        </div>
    </div>

    <!-- Branch -->
    <div class="col">
        <div class="card border-success shadow-sm h-100">
            <div class="card-header bg-success text-white d-flex align-items-center">
                <i class="bi bi-diagram-3 me-2"></i> Branch
            </div>
            <div class="card-body">
                <p>Manage branch locations and data.</p>
                <a asp-area="Admin" asp-controller="Branch" asp-action="Index" class="btn btn-outline-success w-100 mb-2">
                    <i class="bi bi-eye-fill me-1"></i> View Branches
                </a>
                <a asp-area="Admin" asp-controller="Branch" asp-action="Create" class="btn btn-success w-100">
                    <i class="bi bi-plus-lg me-1"></i> Add Branch
                </a>
            </div>
        </div>
    </div>

    <!-- Employee -->
    <div class="col">
        <div class="card border-info shadow-sm h-100">
            <div class="card-header bg-info text-white d-flex align-items-center">
                <i class="bi bi-person-badge me-2"></i> Employee
            </div>
            <div class="card-body">
                <p>Manage employee accounts and roles.</p>
                <a asp-area="Admin" asp-controller="Employee" asp-action="Index" class="btn btn-outline-info w-100 mb-2">
                    <i class="bi bi-eye-fill me-1"></i> View Employees
                </a>
                <a asp-area="Admin" asp-controller="Employee" asp-action="Create" class="btn btn-info w-100">
                    <i class="bi bi-plus-lg me-1"></i> Add Employee
                </a>
            </div>
        </div>
    </div>

    <!-- Category -->
    <div class="col">
        <div class="card border-warning shadow-sm h-100">
            <div class="card-header bg-warning text-dark d-flex align-items-center">
                <i class="bi bi-tags me-2"></i> Category
            </div>
            <div class="card-body">
                <p>Define and manage product categories.</p>
                <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-outline-warning w-100 mb-2">
                    <i class="bi bi-eye-fill me-1"></i> View Categories
                </a>
                <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-warning w-100 text-white">
                    <i class="bi bi-plus-lg me-1"></i> Add Category
                </a>
            </div>
        </div>
    </div>

    <!-- Product -->
    <div class="col">
        <div class="card border-danger shadow-sm h-100">
            <div class="card-header bg-danger text-white d-flex align-items-center">
                <i class="bi bi-box-seam me-2"></i> Product
            </div>
            <div class="card-body">
                <p>Add and manage product inventory.</p>
                <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-danger w-100 mb-2">
                    <i class="bi bi-eye-fill me-1"></i> View Products
                </a>
                <a asp-area="Admin" asp-controller="Product" asp-action="Add" class="btn btn-danger w-100">
                    <i class="bi bi-plus-lg me-1"></i> Add Product
                </a>
            </div>
        </div>
    </div>

    <!-- Customer -->
    <div class="col">
        <div class="card border-secondary shadow-sm h-100">
            <div class="card-header bg-secondary text-white d-flex align-items-center">
                <i class="bi bi-person-lines-fill me-2"></i> Customer
            </div>
            <div class="card-body">
                <p>Manage customer profiles and data.</p>
                <a asp-area="Admin" asp-controller="Customer" asp-action="Index" class="btn btn-outline-secondary w-100 mb-2">
                    <i class="bi bi-eye-fill me-1"></i> View Customers
                </a>
                <a asp-area="Admin" asp-controller="Customer" asp-action="Create" class="btn btn-secondary w-100">
                    <i class="bi bi-plus-lg me-1"></i> Add Customer
                </a>
            </div>
        </div>
    </div>

    <!-- Loan -->
    <div class="col">
        <div class="card border-dark shadow-sm h-100">
            <div class="card-header bg-dark text-white d-flex align-items-center">
                <i class="bi bi-credit-card-2-front-fill me-2"></i> Loan
            </div>
            <div class="card-body">
                <p>Manage loan agreements and terms.</p>
                <a asp-area="Admin" asp-controller="Loan" asp-action="Index" class="btn btn-outline-dark w-100 mb-2">
                    <i class="bi bi-eye-fill me-1"></i> View Loans
                </a>
                <a asp-area="Admin" asp-controller="Loan" asp-action="Create" class="btn btn-dark w-100">
                    <i class="bi bi-plus-lg me-1"></i> Add Loan
                </a>
            </div>
        </div>
    </div>

    <!-- Loan Detail -->
    <div class="col">
        <div class="card border-secondary shadow-sm h-100">
            <div class="card-header bg-secondary text-white d-flex align-items-center">
                <i class="bi bi-file-text me-2"></i> Loan Detail
            </div>
            <div class="card-body">
                <p>Track detailed loan information.</p>
                <a asp-area="Admin" asp-controller="LoanDetail" asp-action="Index" class="btn btn-outline-secondary w-100 mb-2">
                    <i class="bi bi-eye-fill me-1"></i> View Loan Details
                </a>
                <a asp-area="Admin" asp-controller="LoanDetail" asp-action="Create" class="btn btn-secondary w-100">
                    <i class="bi bi-plus-lg me-1"></i> Add Loan Detail
                </a>
            </div>
        </div>
    </div>

    <!-- Loan Item -->
    <div class="col">
        <div class="card border-primary shadow-sm h-100">
            <div class="card-header bg-primary text-white d-flex align-items-center">
                <i class="bi bi-list-ul me-2"></i> Loan Item
            </div>
            <div class="card-body">
                <p>Manage individual items within loans.</p>
                <a asp-area="Admin" asp-controller="LoanItem" asp-action="Index" class="btn btn-outline-primary w-100 mb-2">
                    <i class="bi bi-eye-fill me-1"></i> View Loan Items
                </a>
                <a asp-area="Admin" asp-controller="LoanItem" asp-action="Create" class="btn btn-primary w-100">
                    <i class="bi bi-plus-lg me-1"></i> Add Loan Item
                </a>
            </div>
        </div>
    </div>

</div>
