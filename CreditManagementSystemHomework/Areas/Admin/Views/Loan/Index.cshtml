@model List<CreditManagementSystemHomework.Models.Loan.LoanVM>

<h2>Loan List</h2>
<a asp-action="Create" class="btn btn-primary">Create New Loan</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Customer</th>
            <th>Employee</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model)
        {
            <tr>
                <td>@loan.StartDate.ToShortDateString()</td>
                <td>@loan.EndDate.ToShortDateString()</td>
                <td>@loan.TotalAmount</td>
                <td>@loan.Status</td>
                <td>@loan.CustomerName</td>
                <td>@loan.EmployeeName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@loan.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@loan.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
