@model CreditManagementSystemHomework.Models.Loan.LoanVM

<h2>Delete Loan</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this loan?
</div>

<dl class="row">
    <dt class="col-sm-2">Start Date</dt>
    <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

    <dt class="col-sm-2">End Date</dt>
    <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Total Amount</dt>
    <dd class="col-sm-10">@Model.TotalAmount</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>

    <dt class="col-sm-2">Customer</dt>
    <dd class="col-sm-10">@Model.CustomerName</dd>

    <dt class="col-sm-2">Employee</dt>
    <dd class="col-sm-10">@Model.EmployeeName</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
